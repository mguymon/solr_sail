<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
       <pattern>[%d{yyyyMMdd}] %d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
 
  <logger name="com.slackworks" level="DEBUG"/>
 
  <root>
    <level value="INFO" />
    <appender-ref ref="STDOUT" />
  </root>
</configuration>